        }, 800);*/
        //$(document).scrollLeft(next.position().left - 200);
        $('html, body').animate({
        scrollLeft: next.position().left - margin});
        console.log("clicked " + $(this).position().left);
        console.log("next " + next.position().left);
    
    });
