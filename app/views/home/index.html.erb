<body>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span3">
        <div class="sidebar-nav sidebar-nav-fixed">
            testing
        </div>
    </div>
    <div class="span10">
      <div id="wrapper">
        <% @photos.each do |photo| %>
            <div class="floatbox"> 
              <%= image_tag photo.source_url, size: "#{photo.width}x#{photo.height}" %>
            </div>
         <% end %>
        </div>
    </div>
  </div>
</div>



