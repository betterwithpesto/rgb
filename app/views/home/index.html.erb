#wrapper {
    float:left;
    margin:80px 20px 20px;
    left: 50px;
    margin-right:-99999em;
    position:relative;
}
.floatbox {
    float:left; 
    margin:0 20px 0 0;
}
.floatbox img {float:left;}

.caption {
    float:left;
    width:150px;
    margin:0 0 0 20px;
    padding:10px;
    background:#000;
    color:#FFF;
}

.sidebar-nav-fixed {
    position:fixed;
    top:60px;
    width:21.97%;
}

@media (max-width: 767px) {
    .sidebar-nav-fixed {
        position:static;
        width:auto;
    }
}

@media (max-width: 979px) {
    .sidebar-nav-fixed {
        top:70px;
    }
}

